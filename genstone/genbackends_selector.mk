	$(addsuffix /*.c,$(PLATFORM_SOURCEDIRS))

GEN_BACKENDS_SOURCES = $(wildcard $(PLATFORM_SOURCEDIRS))

GEN_BACKENDS_LIB = \
	$(GENSTONE_DIR)/lib/$(LIB_PREFIX)genbackends$(STATIC_LIB_SUFFIX)

