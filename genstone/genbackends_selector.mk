GEN_BACKENDS_CFLAGS = -I$(GENSTONE_DIR)/genstone/genbackends/include
GEN_BACKENDS_LFLAGS = $(GEN_BACKENDS_LIB)
GEN_BACKENDS_LIBDIRS = $(GENSTONE_DIR)/lib

PLATFORM_SOURCEDIRS := \
	$(addprefix $(GENSTONE_DIR)/genstone/genbackends/,$(PLATFORM_SOURCEDIRS))
